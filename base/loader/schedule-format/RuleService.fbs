include "Service.fbs";
include "Station.fbs";

namespace motis.loader;

enum RuleType : byte {
  THROUGH, MERGE_SPLIT
}

table Rule {
  type: RuleType;
  service1: Service;
  service2: Service;
  from: Station;
  to: Station;
  day_offset1: int;
  day_offset2: int;
  day_switch: bool;
}

table RuleService {
  rules: [Rule];
}
